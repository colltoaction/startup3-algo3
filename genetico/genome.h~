#include <vector>

using namespace std;

class Gene
{
    public:
        bool activated(Board b, column col);
};

class ConnectCGene : Gene {};

bool ConnectCGene::activated(Board b, column col) {
    assert (col >= 0 && col < b.columns());

    // El gen se activa si la ficha introducida en col forma un C en lÃ­nea.

    int row = b.lowestFreeCel.at(col);
    return b.positionIsInLine(row, col, c);
}

class BlockKGene : Gene {
    public:
        BlockKGene(int k);
    private:
        int k;
};

BlockKGene::BlockKGene(int k) : k(k) {}

class Genome
{
    private:
        vector<Gene> genes;
        vector<float> geneWeights;
    public:
        void activate(Board b);
};
